# Stellar Network Configuration
# Options: 'testnet', 'mainnet', 'local'
NEXT_PUBLIC_STELLAR_NETWORK=testnet

# MCP Server Configuration (for blockchain interaction)
MCP_SERVER_URL=http://localhost:3001
MCP_SERVER_TOKEN=your-secret-token

# Factory Contract Addresses (Testnet)
NEXT_PUBLIC_MASTER_FACTORY=
NEXT_PUBLIC_TOKEN_FACTORY=
NEXT_PUBLIC_NFT_FACTORY=
NEXT_PUBLIC_GOVERNANCE_FACTORY=

# Database (PostgreSQL)
# Local: postgresql://user:password@localhost:5432/stellardb
# Neon: postgresql://user:password@ep-xxx.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/stellardb
POSTGRES_URL=postgresql://user:password@localhost:5432/stellardb

# Auth
# Generate: https://generate-secret.vercel.app/32 or `openssl rand -base64 32`
AUTH_SECRET=****

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=****

# NextAuth
NEXTAUTH_URL=http://localhost:3000

# Redis (Optional - for resumable streams)
# Local: redis://localhost:6379
# Upstash: redis://default:password@hostname.upstash.io:6379
REDIS_URL=redis://localhost:6379
